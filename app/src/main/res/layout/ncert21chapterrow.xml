<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:layout_margin="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/finalpdfname"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/greenround"
            android:gravity="center"
            android:padding="15dp"
            android:text="1"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/ncert21chapterNam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"
                android:text="SUBJECT CHAPTER NAME"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <Button
                android:id="@+id/Ncert21chapterDown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ncert21chapterNam"
                android:layout_centerHorizontal="true"
                android:backgroundTint="@color/teal_200"
                android:text="READ PDF" />

        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>